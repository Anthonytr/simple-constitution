html {
  background-color: var(--color-cream);
}

body {
  padding: 50px;
  font-family: var(--font-open-sans);
}


/* Global Typography */

p {
  font-family: var(--font-open-sans);
  font-size: 16px;
  line-height: 1.5;
  margin: 0;

  @media (--tablet) { font-size: 26px; }
}

ul {
  font-size: 16px;
}
